@model pustok.Models.Product

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <img src="~/assets/images/products/@Model.Image" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-8">
            <h1>@Model.Author</h1>
            <p class="badge bg-primary">@Model.Category?.Name</p>
            <hr />
            <h4>Price: <span class="text-success">@Model.Price AZN</span></h4>
            @if (Model.PriceOld > 0)
            {
                <p class="text-muted">Old Price: <del>@Model.PriceOld AZN</del></p>
            }
            <p class="mt-4"><strong>Details:</strong><br /> @Model.Details</p>
            <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>
